<%- include('partials/head')%>

<div class="col-lg-8">        
    <main>
      <h3>Delete a note</h3>
      <div class="contact-clean">
        <form method="POST" action="/notes/<%= note.id %>?_method=DELETE">
          <h4 class="text-center"><%= note.date %></h4>            
          <div class="form-group">
            <textarea autofocus
              class="form-control-t"
              name="title"
              placeholder="Title"
              rows="1"><%= note.title %> 
            </textarea>
            
          </div>
          <div class="form-group">
            <textarea 
              class="form-control"
              name="text"
              placeholder="Notes"
              rows="20"
            ><%= note.text %> </textarea>
          </div>
          <div class="form-group">
            <a href="/notes" type="button" class="btn btn-link">Back to Index page</a>
            
            <button class="btn btn-primary" type="submit">DELETE</button>
          </div>
        </form>
      </div>
    </main>
    </div>
  </div>
<%- include('partials/footer')%>
