<%- include('partials/head')%>


    <div class="col-lg-8">        
      <main>
        <h1>Edit a note</h1>
        <div class="contact-clean">
          <form method="POST" action="/notes/<%= note.id %>?_method=PATCH">
            <h2 class="text-center">Note date: <%= note.date %></h2>            
            <div class="form-group">
              <textarea autofocus
                class="form-control-t"
                name="title"
                placeholder="Title"
                rows="1"><%= note.title %> 
              </textarea>
              
            </div>
            <div class="form-group">
              <textarea 
                class="form-control"
                name="text"
                placeholder="Notes"
                rows="20"
              ><%= note.text %> </textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-primary" type="submit">SAVE</button>
            </div>
          </form>
        </div>
      </main>
      </div>
    </div>
    <%- include('partials/footer')%>